<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background semi transparan -->
    <solid android:color="#33FFFFFF"/>  <!-- Putih 20% transparan -->

    <!-- Sudut melengkung -->
    <corners android:radius="16dp"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#80FFFFFF"/>  <!-- Putih 50% transparan -->

    <!-- Sedikit shadow tipis -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
