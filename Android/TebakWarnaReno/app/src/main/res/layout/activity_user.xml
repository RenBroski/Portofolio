<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/divider">

    <!-- Icon/User Avatar -->
    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle_bg"
        android:padding="16dp"
        android:elevation="8dp" />

    <!-- Judul -->
    <TextView
        android:id="@+id/enterNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Nama Kamu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/userIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Input Nama -->
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contoh: Reno"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/edit_text_bg"
        android:layout_below="@id/enterNameTitle"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:textAlignment="center"
        android:elevation="4dp" />

    <!-- Tombol Mulai -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mulai Game"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_3d"
        android:layout_below="@id/nameInput"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:elevation="6dp" />

</RelativeLayout>
